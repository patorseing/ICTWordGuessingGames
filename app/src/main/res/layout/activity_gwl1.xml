<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Glev.GWL1"
    android:background="@color/lightgreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/guest_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/GWL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5sp"
            android:background="@android:color/white"
            app:srcCompat="@drawable/wl1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20sp">


            <TextView
                android:id="@+id/gwl1_Space1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:freezesText="true"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/gwl1_Space2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:freezesText="true"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/gwl1_Space3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:freezesText="true"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/gwl1_Space4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:freezesText="true"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/gwl1_Space5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:freezesText="true"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/gwl1_Space6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:freezesText="true"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/gwl1_Space7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:freezesText="true"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="4"
            android:gravity="center"
            android:rowCount="3">

            <Button
                android:id="@+id/gwl1_char1"
                android:layout_margin="1sp"
                android:background="@color/orenge"
                android:text="A"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwl1_char2"
                android:layout_margin="1sp"
                android:background="@color/orenge"
                android:text="T"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwl1_char3"
                android:layout_margin="1sp"
                android:background="@color/orenge"
                android:text="A"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwl1_delete"
                android:layout_margin="1sp"
                android:background="@android:color/holo_red_light"
                android:text="delete"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwl1_char4"
                android:layout_margin="1sp"
                android:background="@color/orenge"
                android:text="N"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwl1_char5"
                android:layout_margin="1sp"
                android:background="@color/orenge"
                android:text="I"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwl1_char6"
                android:layout_margin="1sp"
                android:background="@color/orenge"
                android:text="N"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwl1_enter"
                android:layout_margin="1sp"
                android:background="@android:color/holo_red_light"
                android:text="submit"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwl1_char7"
                android:layout_margin="1sp"
                android:background="@color/orenge"
                android:text="E"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwl1_char8"
                android:layout_margin="1sp"
                android:background="@color/orenge"
                android:text="N"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gwl1_char9"
                android:layout_margin="1sp"
                android:background="@color/orenge"
                android:text="G"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </GridLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>