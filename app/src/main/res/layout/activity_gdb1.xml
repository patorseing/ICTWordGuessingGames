<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context=".Glev.GDB1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/GDB1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:padding="5sp"
                app:srcCompat="@drawable/db1"
                android:layout_marginRight="5sp"/>

            <ImageButton
                android:id="@+id/shareDB1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_menu_share"
                android:background="@color/colorAccent"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20sp">


            <TextView
                android:id="@+id/gdb1_Space1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:freezesText="true"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/gdb1_Space2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:freezesText="true"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/gdb1_Space3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:freezesText="true"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/gdb1_Space4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:freezesText="true"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/gdb1_Space5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="5"
                android:freezesText="true"
                android:gravity="center"
                android:text="____"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="4"
            android:gravity="center"
            android:rowCount="3">

            <Button
                android:id="@+id/gdb1_char1"
                android:layout_margin="1sp"
                android:background="@color/purple"
                android:text="T"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gdb1_char2"
                android:layout_margin="1sp"
                android:background="@color/purple"
                android:text="C"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gdb1_char3"
                android:layout_margin="1sp"
                android:background="@color/purple"
                android:text="O"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gdb1_delete"
                android:layout_margin="1sp"
                android:background="@android:color/holo_red_light"
                android:text="delete"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gdb1_char4"
                android:layout_margin="1sp"
                android:background="@color/purple"
                android:text="R"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gdb1_char5"
                android:layout_margin="1sp"
                android:background="@color/purple"
                android:text="A"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gdb1_char6"
                android:layout_margin="1sp"
                android:background="@color/purple"
                android:text="E"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gdb1_enter"
                android:layout_margin="1sp"
                android:background="@android:color/holo_red_light"
                android:text="submit"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gdb1_char7"
                android:layout_margin="1sp"
                android:background="@color/purple"
                android:text="L"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gdb1_char8"
                android:layout_margin="1sp"
                android:background="@color/purple"
                android:text="P"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gdb1_char9"
                android:layout_margin="1sp"
                android:background="@color/purple"
                android:text="B"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </GridLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>